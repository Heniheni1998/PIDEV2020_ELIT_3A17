{% extends 'base.html.twig' %}

{% block content %}
    <h1>Applications list</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Nom</th>
                <th>Prenom</th>
                <th>Annee scolaire</th>
                <th>Niveau scolaire</th>
                <th>Frais de scolarite</th>
                <th>Typepayment</th>
                <th> nombre de mois </th>
                <th>Etat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for application in applications %}
            <tr>

                <td>{{ application.nom }}</td>
                <td>{{ application.prenom }}</td>
                <td>{{ application.anneSc }}</td>
                <td>{{ application.niveauSc }}</td>
                <td>{{ application.frais }}</td>
                <td>{{ application.typePayment }}</td>
                <td>{{ application.nbrMois }}</td>
                <td>{{ application.etat }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('application_show', { 'id': application.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('application_edit', { 'id': application.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('application_new') }}">Create a new application</a>
        </li>
    </ul>
{% endblock %}
