{% extends 'backAdmin.html.twig' %}

{% block content %}
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <br></br>
                <div class="box-header"><center>

                        <h3 class="box-title"> appointment list </h3></center>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
            <tr>
                <th>nom</th>
                <th>prenom</th>
                <th>Date</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rendezvous in rendezvouses %}
            <tr>
                <td>{{ rendezvous.nom }}</td>
                <td>{{ rendezvous.prenom }}</td>
                <td>{% if rendezvous.date %}{{ rendezvous.date|date('Y-m-d H:i:s') }}{% endif %}</td>

                <td>
                    <ul>
                        <li>
                            <a href="{{ path('rendez_show', { 'id': rendezvous.id }) }}"class="btn btn-danger">show</a>
                        </li>
                        <li>
                            <a href="{{ path('rendez_edit', { 'id': rendezvous.id }) }}"class="btn btn-success">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rendez_new') }}">Create a new rendezvous</a>
        </li>
    </ul>
{% endblock %}
