{% extends 'base.html.twig' %}

{% block content %}
    <br><br>
    <h1>Classroom</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ classroom.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ classroom.name }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ classroom.capacity }}</td>
            </tr>
            <tr>
                <th>Bloc</th>
                <td>{{ classroom.bloc }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('classrooms_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('classrooms_edit', { 'id': classroom.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-custon-four btn-primary" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
